#include <iostream>

using namespace std;

int main()
{
	/* Um bei einer Variablen immer leicht sehen zu können um welchen Datentyp es sich handelt, nutzt man die sogenannte ungarische Notation.
	Zum Beispiel fspeed wäre eine float Variable. */

	cout << "|Datentyp|           |Praefix|\n" 
		<< " bool                 b         \n" 
		<< " int                  n         \n" 
		<< " char                 ch        \n" 
		<< " array                a         \n" 
		<< " DWORD                dw        \n" 
		<< " WORD                 w         \n" 
		<< " Zeiger               p         \n" 
		<< " Instanz einer Klasse m           " << endl;

	return 0;
}
